{#
  used in:
    - sitemap
#}
{% if records|length %}
    <ul>
    {% for record in records %}

        <li><a href="{{ record.link }}">{{ record.title }}</a></li>

        {% if (record.children is defined and record.children|length ) %}
            <li>
            {% include 'items/_item-sitemap.twig' with {records: record.children } %}
            </li>
        {% endif %}

    {% endfor %}
    </ul>
{% endif %}
