{% include '_header.twig' %}

{# get contenttype of assigned content by taxonomy slug #}
{% set contenttype = structurecontenttype(record.slug) %}

{% if contenttype %}
    {# get assigned structures and contenttype #}
    {% set records = record.related(contenttype['slug'])|merge(record.related('structures')) %}
{% else %}
    {# get assigned structures #}
    {% set records = record.related('structures') %}
{% endif %}

{% set records = sortRecords(records, 'sortorder') %}
{% set contacts = record.related('persons') %}

<!-- Start content -->
<main role="main" class="l-page">
<div class="lc">
    <!-- Start grid -->
    <div class="grid-main">
        <div class="l-content">
            <div class="l-breadcrumbs">
                {% include 'items/_item-breadcrumb.twig' %}
            </div>

            <div class="maincontent">
                <div class="page-intro">
                    <h1 class="title">{{ record.title }}</h1>
                    <p>{{ record.teaser|raw }}</p>
                </div>
                {% if records is defined %}
                <ul class="l-next_options"><!--
             -->{% for record in records[0:6] if (record.hide_list != 1) %}<!--
                -->{% include 'items/_item-lineblock.twig' with {child : record} %}<!--
             -->{% endfor %}
                </ul>
                {% endif %}
            </div>
        </div><!--
     --><div class="l-sidebar">
            <div class="inner">
                {# import contact snippet #}
                {% include 'items/_item-help.twig' with { records: contacts, title: "",  use_secondary_mail: record.secondary_mail } %}
            </div>
        </div>
    </div>
    <!-- End grid -->
</div>
</main>
<!-- End Content -->

{% include '_footer.twig' %}
