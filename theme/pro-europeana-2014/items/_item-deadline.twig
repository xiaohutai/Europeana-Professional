{% if record.deadline %}

<span class="item-deadline">
    <svg class="icon icon-clock">
        <use xlink:href="#icon-clock"></use>
    </svg>
    <span class="item-text">Deadline: </span>
    <span class="item-day">{{ record.deadline|localdate("%e") }}</span>
    <span class="item-month">{{ record.deadline|localdate("%B") }}</span>
    <span class="item-year">{{ record.deadline|localdate("%Y") }}</span>
</span>

{% endif %}
